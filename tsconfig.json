{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/blocks/*": ["./src/blocks/*"],
			"@/components/*": ["./src/components/*"],
			"@/frontend/*": ["src/app/(frontend)/*"],
			"@/lib/*": ["./src/lib/*"],
			"@/payload-access/*": ["./src/payload/access/*"],
			"@/payload-blocks/*": ["./src/payload/blocks/*"],
			"@/payload-collections/*": ["./src/payload/collections/*"],
			"@/payload-fields/*": ["./src/payload/fields/*"],
			"@/payload-globals/*": ["./src/payload/globals/*"],
			"@/payload-hooks/*": ["./src/payload/hooks/*"],
			"@/payload-utilities/*": ["./src/payload/utilities/*"],
      "@payload-config": ["./src/payload.config.ts"]
    },
    "target": "ES2017"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
